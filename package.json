{
  "name": "wflip",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "docker compose -f docker-compose.dev.yaml up -d && echo '\nâœ… Services started! Run: pnpm dev'",
    "stop": "docker compose down",
    "logs": "docker compose logs -f",
    "reset": "docker compose down -v && docker compose -f docker-compose.dev.yaml up -d",
    "prod": "docker compose up --build"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20"
  }
}
